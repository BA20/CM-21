<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Nota"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:id="@+id/nome"> </TextView>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="06.03.2021"
        android:id="@+id/data"
        android:layout_alignLeft="@+id/nome"
        android:layout_below="@id/nome"> </TextView>

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/ic_baseline_delete_forever_24"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/delete"
        android:layout_alignParentRight="true"
        android:layout_marginStart="314dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/name"
        android:layout_toRightOf="@+id/name"
        android:src="@drawable/ic_baseline_create_24"/>




</RelativeLayout>